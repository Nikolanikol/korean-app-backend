{
  "compilerOptions": {
    // Папки
    "rootDir": "./src",
    "outDir": "./dist",

    // ES Modules (современный подход)
    "module": "Node16",
    "target": "ES2022",
    "moduleResolution": "Node16",


    // Типы
    "types": ["node"],
    "esModuleInterop": true,
    
    // Выходные файлы
    "sourceMap": true,
    "declaration": true,
    
    // Строгость
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Остальное
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}